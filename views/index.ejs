<%- include('header.ejs') %>

<%- include('nav.ejs') %>

<div class="container mt-5 pt-5">
    <header>
        <h1>Books Online
            <small>Market Place de Livros </small>
            <h2>
                <%=promo%>
            </h2>
            <%if (promo) { %>
                <p>Compre agora o novo livro <%=livro[0].titulo%>
                </p>
                <% } %>
        </h1>
    </header>
    <div>
        <h5>Confira outros títulos</h5>
        <ul>
            <%livro.forEach((item, n)=>{%>
                <%if(n !=0){%>
                    <li>
                        <%=item.titulo%> - <%=item.genero%> - <%=item.nome%>
                    </li>
                    <%}%>
                        <%})%>
        </ul>
    </div>
    =============== Produtos ==================
    <div class="row">
        <% galeria.forEach((item)=> { %>
            <div class="col-md-16 col-sm-16 col-lg-3 livro">
                <div class="card">
                    <a href="/single-produto?id=<%=item.livros_id%>">
                        <img class="card-img-top" src="books/<%=item.imagem%>" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=item.titulo%>
                        </h4>
                        <p class="card-text">
                            <%=item.resumo%>
                        </p>
                        <h2>
                            <%=item.valor%>
                        </h2>
                        <a href="carrinho/?id=<%=item.livros_id%>" class="btn btn-primary">Adicionar ao carrinho</a>
                    </div>
                </div>
            </div>
            <%})%>
    </div>
    <!-- =============== Fim dos Produtos ================== -->

    <!-- =============== Paginação ================== -->
    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- =============== Fim da Paginação ================== -->
</div>
<!-- =============== Fim do Conteúdo ================== -->

<!-- =============== FOOTER ================== -->
<script src="../js/controle.js"></script>

<%- include('footer.ejs')%>

